<%- include('../partials/header') %>
<h1>Listado de Vehículos</h1>
<a href="/vehiculos/nuevo" class="link">Registrar nuevo vehículo</a>
<table>
    <thead>
        <tr>
            <th>Matricula</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Propietarios</th>
        </tr>
    </thead>
    <tbody>
        <% vehiculos.forEach(v => { %>
            <tr>
                <td><%= v.matricula %></td>
                <td><%= v.marca %></td>
                <td><%= v.modelo %></td>
                <td>
                    <% if (v.propietarios.length) { %>
                        <ul>
                            <% v.propietarios.forEach(p => { %>
                                <li><%= p.nombre %> <%= p.apellidos %></li>
                            <% }) %>
                        </ul>
                    <% } else { %>
                        Sin propietarios
                    <% } %>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
<%- include('../partials/footer') %>
